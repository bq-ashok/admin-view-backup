<div class="row">
  <ul class="nav nav-tabs" role="tablist">
    {{#each menuItems as |item index|}}
      <li role="presentation" class="{{if (eq index activeMenuIndex) "active"}}">
        <a href="#{{item}}" aria-controls="{{item}}" role="tab" data-toggle="tab" {{action "onMenuItemSelection" item}}>
            <i class="icon {{item}}"></i>
            <span>{{item}}</span>
          </a>
      </li>
    {{/each}}
  </ul>
</div>
